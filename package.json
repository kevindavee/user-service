{
  "name": "user-service",
  "version": "1.0.0",
  "description": "A simple microservice to store user information",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/src/server.js",
    "start:dev": "tsnd -r dotenv/config --watch .env,./src/**/*.ts --respawn src/server.ts",
    "build": "rm -rf dist && tsc",
    "migration:create": "ts-node -r ./src/module-alias.ts ./node_modules/typeorm/cli.js --config src/libs/typeorm/ormconfig-cli.ts migration:create",
    "migration:generate": "ts-node -r ./src/module-alias.ts ./node_modules/typeorm/cli.js --config src/libs/typeorm/ormconfig-cli.ts migration:generate",
    "migration:run": "ts-node -r ./src/module-alias.ts ./node_modules/typeorm/cli.js --config src/libs/typeorm/ormconfig-cli.ts migration:run",
    "migration:revert": "ts-node -r ./src/module-alias.ts ./node_modules/typeorm/cli.js --config src/libs/typeorm/ormconfig-cli.ts migration:revert",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --verbose --runInBand ./tests/unit/.*\\.ts",
    "test:watch": "cross-env NODE_ENV=test jest -i --watch ./tests/unit/.*\\.ts"
  },
  "author": "kevindavee1505@gmail.com",
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "module-alias": "^2.2.2",
    "path": "^0.12.7",
    "pg": "^8.5.1",
    "pino": "^6.8.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.19",
    "typeorm": "^0.2.29",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.33",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.19",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^14.14.16",
    "@types/pg": "^7.14.7",
    "@types/pino": "^6.3.4",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "cross-env": "^7.0.3",
    "dockest": "^2.1.0",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.3.0",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "mockdate": "^3.0.2",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  }
}
